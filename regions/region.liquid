---
layout: base
pagination:
  data: collections.regions
  size: 1
  alias: region
permalink: "region/{{ region.slug }}/index.html"
eleventyComputed:
  title: "Регионы — {{ site.name }}"
  description: "Выберите регион для просмотра моделей, фотографов и стилистов."
  seo_og_title: "Регионы — {{ site.name }}"
  seo_og_description: "Каталог специалистов по регионам."
  seo_og_image: "{{ site.url }}/img/og-image.png"
  seo_og_url: "{{ site.url }}/region/"
  seo_twitter_title: "Регионы — {{ site.name }}"
  seo_twitter_description: "Каталог специалистов по регионам."
  seo_canonical: "{{ site.url }}/region/"
  seo_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "Регионы — {{ site.name }}",
      "url": "{{ site.url }}/region/",
      "description": "Каталог специалистов по регионам",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {% for region in collections.regions %}
          {
            "@type": "ListItem",
            "position": {{ forloop.index }},
            "item": {
              "@type": "Place",
              "name": "{{ region.name | escape }}",
              "url": "{{ site.url }}/region/{{ region.name | slugify }}/"
            }
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
    }
  breadcrumb_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Главная",
          "item": "{{ site.url }}/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Регионы",
          "item": "{{ site.url }}/region/"
        }
      ]
    }
---

<h1>Регион {{ region.name }}</h1>

<div id="profile-list" class="profiles">
  {% for profile in region.profiles %}
    <article class="profile-card">
      <img
        class="profile-card__image"
        width="300"
        height="200"
        src="https://res.cloudinary.com/{{ site.cloudinary_cloud_name }}/image/upload/w_300,h_200,c_fill,q_auto,f_webp/{{ profile.image_url }}"
        srcset="
          https://res.cloudinary.com/{{ site.cloudinary_cloud_name }}/image/upload/w_150,h_100,c_fill,q_auto,f_webp/{{ profile.image_url }} 150w,
          https://res.cloudinary.com/{{ site.cloudinary_cloud_name }}/image/upload/w_300,h_200,c_fill,q_auto,f_webp/{{ profile.image_url }} 300w,
          https://res.cloudinary.com/{{ site.cloudinary_cloud_name }}/image/upload/w_600,h_400,c_fill,q_auto,f_webp/{{ profile.image_url }} 600w
        "
        sizes="(max-width: 600px) 150px, (max-width: 1200px) 300px, 600px"
        alt="Фото профиля {{ profile.name | escape }} ({{ profile.city | default: 'Майами' | escape }})"
        loading="lazy"
      />
      <div class="profile-card__description">
        <h3>{{ profile.name }}</h3>
        <p>{{ profile.city | default: "Регион не указан" }}, {{ profile.category | default: "Категория не указана" }}</p>
        <a href="/profiles/{{ profile.name | slugify }}/" aria-label="Подробнее о {{ profile.name }}">Подробнее</a>
      </div>
    </article>
  {% endfor %}
</div>
