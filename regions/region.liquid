---
layout: base
pagination:
  data: collections.regions
  size: 1
  alias: region
permalink: "region/{{ region.name | slugify }}/index.html"
eleventyComputed:
  title: "{{ region.name | default: 'Регион' }} — Модели и фотографы | ModelConnect Miami"
  description: "Профили моделей, фотографов и стилистов из региона {{ region.name | default: 'не указан' }}. ModelConnect Miami — платформа для творческих людей."
  seo_title: "{{ region.name | default: 'Регион' }} — {{ site.name }}"
  seo_description: "Найдите профессионалов в регионе {{ region.name | default: 'не указан' }}: модели, фотографы, стилисты на ModelConnect Miami 2025."
  seo_og_title: "{{ region.name | default: 'Регион' }} — {{ site.name }}"
  seo_og_description: "Профили моделей, фотографов и стилистов в регионе {{ region.name | default: 'не указан' }} на ModelConnect Miami."
  seo_og_image: "{{ site.url }}{{ site.seo_og_image }}"
  seo_og_url: "{{ site.url }}/region/{{ region.name | slugify }}"
  seo_twitter_title: "{{ region.name | default: 'Регион' }} — {{ site.name }}"
  seo_twitter_description: "Профили профессионалов в регионе {{ region.name | default: 'не указан' }} на ModelConnect Miami 2025."
  seo_twitter_image: "{{ site.url }}{{ site.seo_og_image }}"
  seo_canonical: "{{ site.url }}/region/{{ region.name | slugify }}"
  seo_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "{{ region.name | default: 'Регион' }} — {{ site.name }}",
      "url": "{{ site.url }}/region/{{ region.name | slugify }}",
      "description": "Профили моделей, фотографов и стилистов в регионе {{ region.name | default: 'не указан' }} на ModelConnect Miami 2025",
      "publisher": {
        "@type": "Organization",
        "name": "{{ site.name }}",
        "logo": {
          "@type": "ImageObject",
          "url": "{{ site.url }}/img/logo.png"
        }
      }
    }
---

 <header>
    <nav class="breadcrumbs" aria-label="Навигация по сайту">
      <a href="/">Главная</a> ›
      <a href="/region/">Регионы</a> ›
      <span>{{ region.name | default: 'Регион' | escape }}</span>
    </nav>
  </header>


    <h1>Регион: {{ region.name | default: 'Не указан' | escape }}</h1>

    <div class="profiles-list" role="region" aria-label="Список профилей в регионе">
      {% if region and region.profiles and region.profiles.length > 0 %}
        {% for profile in region.profiles %}
          <article class="profile-card" style="display: flex;">
          <img
    class="profile-card__image"
    width="300"
    height="200"
    src="https://res.cloudinary.com/dimallvw3/image/upload/w_300,h_200,c_fill,q_auto,f_webp/{{ profile.image_url | replace: 'https://res.cloudinary.com/dimallvw3/image/upload/', '' }}"
    srcset="
      https://res.cloudinary.com/dimallvw3/image/upload/w_150,h_100,c_fill,q_auto,f_webp/{{ profile.image_url | replace: 'https://res.cloudinary.com/dimallvw3/image/upload/', '' }} 150w,
      https://res.cloudinary.com/dimallvw3/image/upload/w_300,h_200,c_fill,q_auto,f_webp/{{ profile.image_url | replace: 'https://res.cloudinary.com/dimallvw3/image/upload/', '' }} 300w,
      https://res.cloudinary.com/dimallvw3/image/upload/w_600,h_400,c_fill,q_auto,f_webp/{{ profile.image_url | replace: 'https://res.cloudinary.com/dimallvw3/image/upload/', '' }} 600w"
    sizes="(max-width: 600px) 150px, (max-width: 1200px) 300px, 600px"
    alt="Фото профиля {{ profile.name | escape }}"
    loading="lazy"
  />
            <div class="profile-card__description">
              <h2>{{ profile.name | default: 'Без имени' | escape }}</h2>
              <p>{{ profile.city | default: 'Регион не указан' | escape }}</p>
              <p>{{ profile.description | truncate: 100 | escape }}</p>
              <a href="/profiles/{{ profile.id | slugify }}/index.html" aria-label="Подробнее о {{ profile.name | default: 'Без имени' | escape }}">Подробнее</a>
            </div>
          </article>
        {% endfor %}
      {% else %}
        <p>В этом регионе пока нет профилей.</p>
      {% endif %}
    </div>
     <div id="pagination-container"></div>
  </main>

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Профили в регионе {{ region.name | default: 'Регион' }}",
    "description": "Профили моделей, фотографов и стилистов в регионе {{ region.name | default: 'не указан' }}",
    "itemListElement": [
      {% for profile in region.profiles %}
      {
        "@type": "ListItem",
        "position": {{ forloop.index }},
        "item": {
          "@type": "Person",
          "name": "{{ profile.name | default: 'Без имени' | escape }}",
          "description": "{{ profile.description | truncate: 200 | escape }}",
          "image": "{{ site.url }}{{ profile.image_url | default: '/img/placeholder.webp' }}",
          "url": "{{ site.url }}/profiles/{{ profile.id | slugify }}/index.html"
        }
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }
  </script>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Главная",
        "item": "{{ site.url }}/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Регионы",
        "item": "{{ site.url }}/region"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "{{ region.name | default: 'Регион' | escape }}",
        "item": "{{ site.url }}/region/{{ region.name | slugify }}"
      }
    ]
  }
  </script>
