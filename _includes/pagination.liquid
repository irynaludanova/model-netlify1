{% if pagination.pages.length > 1 %}
<nav class="pagination" aria-label="Навигация по страницам">
  {% if pagination.href.previous %}
    <a href="{{ pagination.href.previous }}" class="prev" aria-label="Предыдущая страница">← Назад</a>
  {% endif %}

  {% for pageEntry in pagination.pages %}
    <a href="{{ pagination.hrefs[forloop.index0] }}"
       class="{% if forloop.index0 == pagination.pageNumber %}active{% endif %}"
       aria-label="Страница {{ forloop.index }}"
       {% if forloop.index0 == pagination.pageNumber %}aria-current="page"{% endif %}>
      {{ forloop.index }}
    </a>
  {% endfor %}

  {% if pagination.href.next %}
    <a href="{{ pagination.href.next }}" class="next" aria-label="Следующая страница">Вперёд →</a>
  {% endif %}
</nav>
{% endif %}