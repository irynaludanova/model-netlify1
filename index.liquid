---
layout: base
pagination:
  data: allProfiles
  size: 6
  alias: profiles
permalink: "{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber }}/{% endif %}index.html"

eleventyComputed:
  title: "{{ site.name }} — {{ site.title1 }}"
  description: "{{ site.description1 }}"
  seo_title: "{{ site.title1 }} — {{ site.title }}"
  seo_description: "{{ site.description1 }}"
  seo_og_title: "{{ site.title1 }}"
  seo_og_description: "{{ site.description1 }}"
  seo_og_image: "{{ site.url }}{{ site.seo_og_image }}"
  seo_og_url: "{{ site.url }}"
  seo_twitter_title: "{{ site.title1 }} — {{ site.name }}"
  seo_twitter_description: "{{ site.description1 }}"
  seo_twitter_image: "{{ site.url }}{{ site.seo_og_image }}"
  seo_canonical: "{{ site.url }}"
---

<div class="profiles-section">
  <h1>{{ site.name }}</h1>
  <h2>{{ site.title1 }} в 2025</h2>

  <div class="home-section__intro">
    <p>{{ site.intro }}</p>
  </div>

  {% include "filters.liquid" %}

  <div class="profile-list" id="profile-list">
    {% if profiles.length > 0 %}
      {% for profile in profiles %}
        <div class="profile-card">
          <img
            class="profile-card__image"
            width="300"
            height="200"
            src="{{ profile.image_url | default: '/img/placeholder.png' }}"
            alt="Фото профиля {{ profile.name }}"
          />
          <div class="profile-card__description">
            <h3>{{ profile.name }}</h3>
            <p>{{ profile.city | default: '' }}, {{ profile.category | default: '' }}</p>
            <a href="/profiles/{{ profile.id }}/">Подробнее</a>
          </div>
        </div>
      {% endfor %}
    {% else %}
      <p>Профили не найдены.</p>
    {% endif %}
  </div>

  {% include "pagination.liquid" %}
</div>
