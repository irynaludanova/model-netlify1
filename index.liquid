---
layout: base
permalink: /index.html
eleventyComputed:
  title: '{{ site.name }} — Главная'
  description: 'Свежие профили моделей, фотографов и стилистов Майами 2025'
  seo_og_title: '{{ site.name }} — Главная'
  seo_og_description: 'Свежие профили моделей, фотографов и стилистов Майами 2025'
  seo_og_image: '{{ site.url }}/img/og-image.png'
  seo_og_url: '{{ site.url }}/'
  seo_twitter_title: '{{ site.name }} — Главная'
  seo_twitter_description: 'Свежие профили моделей, фотографов и стилистов Майами 2025'
  seo_twitter_image: '{{ site.url }}/img/og-image.png'
  seo_canonical: '{{ site.url }}/'
  seo_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "{{ site.name }} — Главная",
      "description": "Свежие профили моделей, фотографов и стилистов Майами 2025",
      "url": "{{ site.url }}/",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {% for profile in profiles %}
          {
            "@type": "ListItem",
            "position": {{ forloop.index }},
            "item": {
              "@type": "Person",
              "name": "{{ profile.name | escape }}",
              "jobTitle": "{{ profile.category | escape }}",
              "address": { "@type": "PostalAddress", "addressLocality": "{{ profile.city | escape }}" },
              "image": "https://res.cloudinary.com/{{ site.cloudinary_cloud_name }}/image/upload/w_600,h_400,c_fill,q_auto,f_webp/{{ profile.image_url }}",
              "url": "{{ site.url }}/profiles/{{ profile.name | slugify }}/"
            }
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
    }
  breadcrumb_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [{
        "@type": "ListItem",
        "position": 1,
        "name": "Главная",
        "item": "{{ site.url }}/"
      }]
    }
---

<section class="profiles-section">

  <h1>{{ site.name }}</h1>
  <h2>{{ site.title1 }} в 2025</h2>

  <div class="filters">
    <label for="region-select" class="visually-hidden">Выберите регион</label>
<select id="region-select" aria-label="Фильтр по региону">
  <option value="все">Все регионы</option>
</select>

<label for="category-select" class="visually-hidden">Выберите категорию</label>
<select id="category-select" aria-label="Фильтр по категории">
  <option value="все">Все категории</option>
</select>
  </div>

  <div id="profile-list">
    <p>Загрузка профилей...</p>
  </div>

  <div id="pagination-container"></div>
</section>

<script>
  window.SUPABASE_URL = "{{ site.supabase_url }}";
  window.SUPABASE_KEY = "{{ site.supabase_anon_key }}";
  window.CLOUDINARY_CLOUD_NAME="{{ site.cloudinary_cloud_name }}"
</script>
<script type="module" src="/js/profiles.js"></script>
