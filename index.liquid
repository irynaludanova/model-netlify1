---
layout: base
pagination:
  data: allProfiles
  size: 4
  alias: profiles
permalink: "{% if pagination.pageNumber > 0 %}page/{{ pagination.pageNumber }}/{% endif %}index.html"

eleventyComputed:
  title: "{{ site.name }} — {{ site.title1 }}"
  description: "{{ site.description1 }} модели Майами 2025, фотографы Халландейл, стилисты Корал-Гейблс"
  seo_title: "{{ site.title1 }}"
  seo_description: "{{ site.description1 }} Главная страница с моделями Майами 2025, фотографами Халландейл, стилистами Корал-Гейблс"
  seo_og_title: "{{ site.title1 }}"
  seo_og_description: "{{ site.description1 }} Обзор моделей Майами 2025, фотографов Халландейл, стилистов Корал-Гейблс"
  seo_og_image: "{{ site.url }}{{ site.seo_og_image }}"
  seo_og_url: "{{ site.url }}{% if pagination.pageNumber > 0 %}/page/{{ pagination.pageNumber }}{% endif %}"
  seo_twitter_title: "{{ site.title1 }} — {{ site.name }}"
  seo_twitter_description: "{{ site.description1 }} модели Майами 2025, фотографы Халландейл, стилисты Корал-Гейблс"
  seo_twitter_image: "{{ site.url }}{{ site.seo_og_image }}"
  seo_canonical: "{{ site.url }}{% if pagination.pageNumber > 0 %}/page/{{ pagination.pageNumber }}{% endif %}"
  seo_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "{{ site.name }} — {{ site.title1 }}",
      "url": "{{ site.url }}{% if pagination.pageNumber > 0 %}/page/{{ pagination.pageNumber }}{% endif %}",
      "description": "{{ site.description1 }} Главная страница с моделями Майами 2025, фотографами Халландейл, стилистами Корал-Гейблс",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {% for profile in profiles %}
          {
            "@type": "ListItem",
            "position": {{ forloop.index }},
            "item": {
              "@type": "Person",
              "name": "{{ profile.name | escape }}",
              "jobTitle": "{{ profile.category | escape }}",
              "description": "{{ profile.description | escape }}",
              "email": "{{ profile.email | escape }}",
              "telephone": "{{ profile.phone | escape }}",
              "address": {
                "@type": "PostalAddress",
                "addressLocality": "{{ profile.city | escape }}"
              },
              "image": "{{ profile.image_url | default: '/img/placeholder.webp' }}",
              "url": "{{ site.url }}/profiles/{{ profile.id | slugify }}/"
            }
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
    }
---
<div class="profiles-section">
  <h1>{{ site.name }}</h1>
  <h2>{{ site.title1 }} в 2025</h2>

  <div class="home-section__intro">
    <p>{{ site.intro }}</p>
  </div>

  {% include "filters.liquid" %}

  <div class="profile-list" id="profile-list">
    {% if profiles.length > 0 %}
      {% for profile in profiles %}
       <div class="profile-card" data-region="{{ profile.city | default: '' | escape | downcase | replace: ' ', '-' }}" data-category="{{ profile.category | default: '' | escape | downcase }}">
  <img
    class="profile-card__image"
    width="300"
    height="200"
    src="https://res.cloudinary.com/dimallvw3/image/upload/w_300,h_200,c_fill,q_auto,f_webp/{{ profile.image_url | replace: 'https://res.cloudinary.com/dimallvw3/image/upload/', '' }}"
    srcset="
      https://res.cloudinary.com/dimallvw3/image/upload/w_150,h_100,c_fill,q_auto,f_webp/{{ profile.image_url | replace: 'https://res.cloudinary.com/dimallvw3/image/upload/', '' }} 150w,
      https://res.cloudinary.com/dimallvw3/image/upload/w_300,h_200,c_fill,q_auto,f_webp/{{ profile.image_url | replace: 'https://res.cloudinary.com/dimallvw3/image/upload/', '' }} 300w,
      https://res.cloudinary.com/dimallvw3/image/upload/w_600,h_400,c_fill,q_auto,f_webp/{{ profile.image_url | replace: 'https://res.cloudinary.com/dimallvw3/image/upload/', '' }} 600w"
    sizes="(max-width: 600px) 150px, (max-width: 1200px) 300px, 600px"
    alt="Фото профиля {{ profile.name | escape }}"
    loading="lazy"
  />
  <div class="profile-card__description">
    <h3>{{ profile.name | escape }}</h3>
    <p>{{ profile.city | default: 'Регион не указан' | escape }}, {{ profile.category | default: 'Категория не указана' | escape }}</p>
    {% if profile.description %}<p>{{ profile.description | escape }}</p>{% endif %}
    {% if profile.age %}<p>Возраст: {{ profile.age }}</p>{% endif %}
    {% if profile.email %}<p>Email: <a href="mailto:{{ profile.email | escape }}">{{ profile.email | escape }}</a></p>{% endif %}
    {% if profile.phone %}<p>Телефон: <a href="tel:{{ profile.phone | escape }}">{{ profile.phone | escape }}</a></p>{% endif %}
    <a href="/profiles/{{ profile.id | slugify }}/" aria-label="Подробнее о {{ profile.name | escape }}">Подробнее</a>
  </div>
</div>
      {% endfor %}
    {% else %}
      <p>Профили не найдены.</p>
    {% endif %}
  </div>

  {% include "pagination.liquid" %}
</div>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "Главная",
    "item": "{{ site.url }}/"
  }]
}
</script>

{% if pagination.href.previous %}
  <link rel="prev" href="{{ pagination.href.previous }}">
{% endif %}
{% if pagination.href.next %}
  <link rel="next" href="{{ pagination.href.next }}">
{% endif %}