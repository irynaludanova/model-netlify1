---
layout: base
permalink: /index.html
eleventyComputed:
  title: '{{ site.name }} — Главная'
  description: 'Свежие профили моделей, фотографов и стилистов Майами 2025'
  seo_title: '{{ site.name }} — Главная'
  seo_description: 'Обзор новых моделей, фотографов и стилистов Майами 2025'
  seo_og_title: '{{ site.name }} — Главная'
  seo_og_description: 'Свежие профили моделей, фотографов и стилистов Майами 2025'
  seo_og_image: '{{ site.url }}{{ site.seo_og_image }}'
  seo_og_url: '{{ site.url }}/'
  seo_twitter_title: '{{ site.name }} — Главная'
  seo_twitter_description: 'Свежие профили моделей, фотографов и стилистов Майами 2025'
  seo_canonical: '{{ site.url }}/'
  seo_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "{{ site.name }} — Главная",
      "url": "{{ site.url }}/",
      "description": "Свежие профили моделей, фотографов и стилистов Майами 2025",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {% for profile in profiles %}
          {
            "@type": "ListItem",
            "position": {{ forloop.index }},
            "item": {
              "@type": "Person",
              "name": "{{ profile.name | escape }}",
              "jobTitle": "{{ profile.category | escape }}",
              "address": {
                "@type": "PostalAddress",
                "addressLocality": "{{ profile.city | escape }}"
              },
              "image": "{{ profile.image_url | default: '/img/placeholder.webp' }}",
              "url": "{{ site.url }}/profiles/{{ profile.id | slugify }}/"
            }
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
    }

---

<section class="profiles-section">
  <h1>{{ site.name }}</h1>
   <h2>{{ site.title1 }} в 2025</h2>

  <div class="filters">
    <label for="region-select">Регион:</label>
    <select id="region-select">
      <option value="все">Все</option>
    </select>

    <label for="category-select">Категория:</label>
    <select id="category-select">
      <option value="все">Все</option>
    </select>
  </div>

  <div id="profile-list">
    <p>Загрузка профилей...</p>
  </div>

  <div id="pagination-container"></div>
</section>
<script>
  window.SUPABASE_URL = "{{ site.supabase_url }}";
  window.SUPABASE_KEY = "{{ site.supabase_anon_key }}";
</script>

<script type="module" src="/js/profiles.js" ></script>

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BreadcrumbList",
  "itemListElement": [{
    "@type": "ListItem",
    "position": 1,
    "name": "Главная",
    "item": "{{ site.url }}/"
  }]
}
</script>

{% if pagination.href.previous %}
  <link rel="prev" href="{{ pagination.href.previous }}">
{% endif %}
{% if pagination.href.next %}
  <link rel="next" href="{{ pagination.href.next }}">
{% endif %}