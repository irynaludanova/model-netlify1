permalink: /sitemap.xml
layout: null
---

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

  <!-- Статические страницы -->
  <url>
    <loc>https://models-connect.netlify.app/</loc>
    <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>1.0</priority>
  </url>

  <url>
    <loc>https://models-connect.netlify.app/region/</loc>
    <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>

  <url>
    <loc>https://models-connect.netlify.app/category/</loc>
    <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    <changefreq>daily</changefreq>
    <priority>0.8</priority>
  </url>

  <url>
    <loc>https://models-connect.netlify.app/add-profile/</loc>
    <lastmod>{{ "now" | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.7</priority>
  </url>

  <!-- Динамические профили -->
  {% for p in collections.profiles %}
  {% assign profile = p.data.profile %}
  <url>
    <loc>https://models-connect.netlify.app/profiles/{{ profile.slug | default: profile.id }}/</loc>
    <lastmod>{{ profile.updated_at | default: profile.created_at | default: "now" | date: "%Y-%m-%dT%H:%M:%S+00:00" }}</lastmod>
    <changefreq>weekly</changefreq>
    <priority>0.9</priority>
  </url>
  {% endfor %}

</urlset>
