---
layout: base
permalink: /region/index.html
eleventyComputed:
  title: "Регионы — {{ site.name }}"
  description: "Выберите регион для просмотра моделей, фотографов и стилистов."
  seo_og_title: "Регионы — {{ site.name }}"
  seo_og_description: "Каталог специалистов по регионам."
  seo_og_image: "{{ site.url }}/img/og-image.png"
  seo_og_url: "{{ site.url }}/region/"
  seo_twitter_title: "Регионы — {{ site.name }}"
  seo_twitter_description: "Каталог специалистов по регионам."
  seo_canonical: "{{ site.url }}/region/"
  seo_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "Регионы — {{ site.name }}",
      "url": "{{ site.url }}/region/",
      "description": "Каталог специалистов по регионам",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {% for region in collections.regions %}
          {
            "@type": "ListItem",
            "position": {{ forloop.index }},
            "item": {
              "@type": "Place",
              "name": "{{ region.name | escape }}",
              "url": "{{ site.url }}/region/{{ region.name | slugify }}/"
            }
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
    },
    breadcrumb_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Главная",
          "item": "{{ site.url }}/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Регионы",
          "item": "{{ site.url }}/region/"
        },
        {
          "@type": "ListItem",
          "position": 3,
          "name": "{{ region.name | escape }}",
          "item": "{{ site.url }}/region/{{ region.name | slugify }}/"
        }
      ]
    }
---

<section class="profiles-section">
  <h1>{{ site.title2 }}</h1>
  <p>Выберите регион для просмотра профилей:</p>

  <ul class="region-list" role="list" label="Список регионов">
    {% for region in collections.regions %}
      <li class="region-card">
        <a href="/region/{{ region.name | slugify }}/index.html" aria-label="Перейти к региону {{ region.name | escape }}">
          {{ region.name | escape }}
        </a>
        <p>{{ region.profiles | size }} профилей</p>
      </li>
    {% endfor %}
  </ul>

  <div id="profile-list">
    <p>Загрузка профилей...</p>
  </div>
  <div id="pagination-container"></div>
</section>


