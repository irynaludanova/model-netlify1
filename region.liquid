<div class="regions-section" id="regions">
  <h1>Профили по регионам</h1>
  {% assign regions = "Майами-Бич,Халландейл,Корал-Гейблс" | split: "," %} {%
  for region in regions %} {% assign profiles_in_region =
  collections.allProfiles | where: "city", region %}
  {% if  profiles_in_region.size > 0 %}
  <section id="{{ region | slugify }}">
    <h2>{{ region }}</h2>
    <div class="profile-list">
      {% for profile in profiles_in_region %}
      <div class="profile-card">
        <img
          class="profile-card__image"
           width="300"
         height="200"
          src="{{
            profile.image_url | default : '/img/placeholder.png' | assetUrl
          }}"
          alt="Фото профиля {{ profile.name }}"
        />
         <div class="profile-card__description">
        <h3>{{ profile.name | safe}}</h3>
        <p><strong>Категория:</strong> {{ profile.category }}</p>
        <p>{{ profile.description | truncate : 100 }}</p>
        <p>{{ profile.date | date : "%d.%m.%Y, %H:%M" }}</p>
        <a
          href="{{
            '/profiles/' | append : profile.id | append : '/' | assetUrl
          }}"
          >Подробнее</a
        >
        </div>
      </div>
      {% endfor %}
    </div>
  </section>
  {% endif %} {% endfor %}
</div>

