<div class="regions-section" id="regions">
  <h1>Профили по регионам</h1>

  {% comment %} Собираем уникальные города {% endcomment %}
  {% assign cities = "" | split: "" %}
  {% for p in collections.profiles %}
    {% unless cities contains p.data.profile.city %}
      {% assign cities = cities | push: p.data.profile.city %}
    {% endunless %}
  {% endfor %}

  {% comment %} Для каждого города выводим профили {% endcomment %}
  {% for city in cities %}
    <h2>{{ city }}</h2>
    <div class="profile-list">
      {% for profile in collections.profiles %}
        {% if profile.data.profile.city == city %}
          <div class="profile-card">
            <img
              class="profile-card__image"
              width="300"
              height="200"
              src="{{ profile.data.profile.image_url | default: '/img/placeholder.png' }}"
              alt="Фото профиля {{ profile.data.profile.name }}"
            />
            <div class="profile-card__description">
              <h3>{{ profile.data.profile.name }}</h3>
              <p>{{ profile.data.profile.city }}, {{ profile.data.profile.category }}</p>
              <a href="{{ profile.url }}">Подробнее</a>
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  {% endfor %}
</div>
