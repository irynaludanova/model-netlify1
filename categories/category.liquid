---
layout: base
pagination:
  data: collections.categories
  size: 1
  alias: category
permalink: "category/{{ category.slug }}/index.html"
eleventyComputed:
  title: "{{ category.name | default: 'Категория' }} — Модели и фотографы | ModelConnect Miami"
  description: "Профили моделей, фотографов и стилистов из категории {{ category.name | default: 'не указана' }}. ModelConnect Miami — платформа для творческих людей."
  seo_title: "{{ category.name | default: 'Категория' }} — {{ site.name }}"
  seo_description: "Найдите профессионалов в категории {{ category.name | default: 'не указана' }} на ModelConnect Miami 2025."
  seo_og_title: "{{ category.name | default: 'Категория' }} — {{ site.name }}"
  seo_og_description: "Профили профессионалов в категории {{ category.name | default: 'не указана' }} на ModelConnect Miami."
  seo_og_image: "{{ site.url }}{{ site.seo_og_image }}"
  seo_og_url: "{{ site.url }}/category/{{ category.slug }}"
  seo_twitter_title: "{{ category.name | default: 'Категория' }} — {{ site.name }}"
  seo_twitter_description: "Профили профессионалов в категории {{ category.name | default: 'не указана' }} на ModelConnect Miami 2025."
  seo_twitter_image: "{{ site.url }}{{ site.seo_og_image }}"
  seo_canonical: "{{ site.url }}/category/{{ category.slug }}"
  seo_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "WebPage",
      "name": "{{ category.name | default: 'Категория' }} — {{ site.name }}",
      "url": "{{ site.url }}/category/{{ category.slug }}",
      "description": "Профили профессионалов в категории {{ category.name | default: 'не указана' }} на ModelConnect Miami 2025",
      "publisher": {
        "@type": "Organization",
        "name": "{{ site.name }}",
        "logo": {
          "@type": "ImageObject",
          "url": "{{ site.url }}/img/logo.png"
        }
      }
    }
---

  <header>
    <nav class="breadcrumbs" aria-label="Навигация по сайту">
      <a href="/">Главная</a> ›
      <a href="/category/">Категории</a> ›
      <span>{{ category.name | default: 'Категория' | escape }}</span>
    </nav>
  </header>

    <h1>Категория: {{ category.name | default: 'Не указана' | escape }}</h1>

    <div class="profiles-list" role="region" aria-label="Список профилей в категории">
      {% if category and category.profiles and category.profiles.length > 0 %}
        {% for profile in category.profiles %}
          <article class="profile-card" style="display: flex;">
            <img
              src="{{ profile.image_url | default: '/img/placeholder.webp' }}"
              alt="Фото профиля {{ profile.name | default: 'Без имени' | escape }}"
              class="profile-card__image"
              width="300"
              height="200"
              loading="lazy"
            >
            <div class="profile-card__description">
              <h2>{{ profile.name | default: 'Без имени' | escape }}</h2>
              <p>{{ profile.city | default: 'Регион не указан' | escape }}</p>
              <p>{{ profile.description | truncate: 100 | escape }}</p>
              <a href="/profiles/{{ profile.id | slugify }}/index.html" aria-label="Подробнее о {{ profile.name | default: 'Без имени' | escape }}">Подробнее</a>
            </div>
          </article>
        {% endfor %}
      {% else %}
        <p>В этой категории пока нет профилей.</p>
      {% endif %}
    </div>
  </main>

  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "ItemList",
    "name": "Профили в категории {{ category.name | default: 'Категория' }}",
    "description": "Профили профессионалов в категории {{ category.name | default: 'не указана' }}",
    "itemListElement": [
      {% for profile in category.profiles %}
      {
        "@type": "ListItem",
        "position": {{ forloop.index }},
        "item": {
          "@type": "Person",
          "name": "{{ profile.name | default: 'Без имени' | escape }}",
          "description": "{{ profile.description | truncate: 200 | escape }}",
          "image": "{{ site.url }}{{ profile.image_url | default: '/img/placeholder.webp' }}",
          "url": "{{ site.url }}/profiles/{{ profile.id | slugify }}/index.html"
        }
      }{% unless forloop.last %},{% endunless %}
      {% endfor %}
    ]
  }
  </script>
  <script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "BreadcrumbList",
    "itemListElement": [
      {
        "@type": "ListItem",
        "position": 1,
        "name": "Главная",
        "item": "{{ site.url }}/"
      },
      {
        "@type": "ListItem",
        "position": 2,
        "name": "Категории",
        "item": "{{ site.url }}/category"
      },
      {
        "@type": "ListItem",
        "position": 3,
        "name": "{{ category.name | default: 'Категория' | escape }}",
        "item": "{{ site.url }}/category/{{ category.slug }}"
      }
    ]
  }
  </script>

