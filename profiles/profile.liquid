---
layout: base
pagination:
  data: static-profiles
  size: 1
  alias: profile
permalink: /profiles/{{ profile.id }}/

eleventyComputed:
  title: "{{ profile.name }} — {{ profile.category }} | ModelConnect Miami"
  description: "{{ profile.description }}"
  ogTitle: "{{ profile.name }} — {{ profile.category }} | ModelConnect Miami"
  ogDescription: "{{ profile.description }}"
  ogImage: "{{ profile.image_url | default: '/img/og-image-main.webp' }}"
  ogUrl: "https://models-connect.netlify.app/profiles/{{ profile.id | slugify }}/"
  twitterTitle: "{{ profile.name }} — {{ profile.category }} | ModelConnect Miami"
  twitterDescription: "{{ profile.description }}"
  twitterImage: "{{ profile.image_url | default: '/img/og-image-main.webp' }}"
  canonical: "https://models-connect.netlify.app/profiles/{{ profile.id | slugify }}/"
  jsonLd: |
    {
      "@context": "https://schema.org",
      "@type": "Person",
      "name": "{{ profile.name   }}",
      "jobTitle": "{{ profile.category   }}",
      "address": {
        "@type": "PostalAddress",
        "addressLocality": "{{ profile.city   }}"
      },
      "image": "{{ profile.image_url | default: '/img/placeholder.png'   }}",
      "url": "https://models-connect.netlify.app/profiles/{{ profile.id | slugify }}/"
    }
---
<h1>{{ profile.name   }} — {{ profile.category   }}</h1>
<div  class="profile-detail">
  <div class="profile-detail__images">
   <figure>
    <img
      class="profile-detail__image"
      srcset="
                https://models-connect.netlify.app/img/profile-low-1.webp   300w,
               https://models-connect.netlify.app/img/profile-med-1.webp   600w,
                https://models-connect.netlify.app/img/profile-high-1.webp 1200w
              "
              sizes="(max-width: 600px) 100vw, (max-width: 1024px) 100vw, 400px"
      src="{{ profile.image_url | default: 'https://models-connect.netlify.app/img/placeholder.png'   }}"
      alt="Основное фото профиля {{ profile.name   }}"
    />
     <figcaption>Основное фото профиля {{ profile.name   }}</figcaption>
    </figure>
    <figure>
    <img
              class="profile-detail__image"
              src="{{ profile.image_url | default: 'https://models-connect.netlify.app/img/placeholder.png'   }}"
               srcset="
                https://models-connect.netlify.app/img/profile-low-1.webp   300w,
               https://models-connect.netlify.app/img/profile-med-1.webp   600w,
                https://models-connect.netlify.app/img/profile-high-1.webp 1200w
              "
              sizes="(max-width: 600px) 100vw, (max-width: 1024px) 100vw, 400px"
              alt="Работы {{ profile.name   }}"
              loading="lazy"
              decoding="async"
            />
            <figcaption>Работы {{ profile.name   }}</figcaption>
            </figure>
    <figure>
    <img
              class="profile-detail__image"
              src="{{ profile.image_url | default: 'https://models-connect.netlify.app/img/placeholder.png'   }}"
              srcset="
                https://models-connect.netlify.app/img/profile-low-1.webp   300w,
               https://models-connect.netlify.app/img/profile-med-1.webp   600w,
                https://models-connect.netlify.app/img/profile-high-1.webp 1200w
              "
              sizes="(max-width: 600px) 100vw, (max-width: 1024px) 100vw, 400px"
              alt="Пример фотосессии {{ profile.name   }}"
              loading="lazy"
              decoding="async"
            />
            <figcaption>Пример фотосессии {{ profile.name   }}</figcaption>
            </figure>
     </div>
  <div class="profile-detail__info">
    <p><strong>Имя:</strong> {{ profile.name   }}</p>
    <p><strong>Возраст:</strong> {{ profile.age | default: 'Не указан' }}</p>
    <p><strong>Город:</strong> {{ profile.city   }}</p>
    <p><strong>Рубрика:</strong> {{ profile.category   }}</p>
    <p class="profile-detail__description"><strong>Описание:</strong> {{ profile.description   }}</p>
    <p>{{ profile.date | date: "%d.%m.%Y, %H:%M" }}</p>
    <p class="profile-detail__contact">{{ profile.email | default: 'Не указан'   }}</p>
    <a class="button" href="mailto:{{ profile.email | default: '#' }}">Связаться</a>
    </div>
</div>

