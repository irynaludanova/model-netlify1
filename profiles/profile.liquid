---
layout: base.liquid
pagination:
  data: collections.allProfiles
  size: 1
  alias: profile
permalink: /profiles/{{ profile.id }}/index.html
seo_title: "{{ profile.name }} — ModelConnect Miami"
seo_description: "{{ profile.description | truncate: 160 }}"
seo_keywords: "{{ profile.category }}, {{ profile.city }}, ModelConnect Miami"
seo_og_title: "{{ profile.name }} — ModelConnect Miami"
seo_og_description: "{{ profile.description | truncate: 160 }}"
seo_og_image: "{{ profile.image_url | default: '/img/placeholder.png' }}"
seo_og_url: "https://models-connect.netlify.app/profiles/{{ profile.id }}/"
seo_og_type: profile
seo_twitter_card: summary_large_image
seo_twitter_title: "{{ profile.name }} — ModelConnect Miami"
seo_twitter_description: "{{ profile.description | truncate: 160 }}"
seo_twitter_image: "{{ profile.image_url | default: '/img/placeholder.png' }}"
seo_canonical: "https://models-connect.netlify.app/profiles/{{ profile.id }}/"
seo_json_ld: |
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "{{ profile.name }}",
    "jobTitle": "{{ profile.category }}",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "{{ profile.city }}",
      "addressRegion": "Майами"
    },
    "email": "{{ profile.email }}",
    "telephone": "{{ profile.phone | default: '' }}",
    "image": "{{ profile.image_url | default: '/img/placeholder.png' | assetUrl }}",
    "description": "{{ profile.description | truncate: 160 }}"
  }
---
<nav>
  <ul class="nav-list">
    <li><a href="{{ '/' | assetUrl }}">Главная</a></li>
    <li><a href="{{ '/region/' | assetUrl }}">Регионы</a></li>
    <li><a href="{{ '/category/' | assetUrl }}">Категории</a></li>
    <li><a href="{{ '/add-profile/' | assetUrl }}">Добавить профиль</a></li>
  </ul>
</nav>

<div class="profile-detail">
  <h1>{{ profile.name }}</h1>
  <img class="profile-detail__image" src="{{ profile.image_url | default: '/img/placeholder.png' | assetUrl }}" alt="Фото профиля {{ profile.name }}">
  <p><strong>Город:</strong> {{ profile.city }}</p>
  <p><strong>Категория:</strong> {{ profile.category }}</p>
  <p><strong>Email:</strong> {{ profile.email }}</p>
  {% if profile.phone %}
    <p><strong>Телефон:</strong> {{ profile.phone }}</p>
  {% endif %}
  <p>{{ profile.description }}</p>
</div>

<footer class="site-footer">
  <p>© 2025 ModelConnect Miami</p>
</footer>