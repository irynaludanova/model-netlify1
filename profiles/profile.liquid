---
layout: base
pagination:
  data: static-profiles
  size: 1
  alias: profile
permalink: "profiles/{{ profile.id | slugify }}/index.html"

eleventyComputed:
  title: "{{ profile.name }} — {{ profile.category }} | ModelConnect Miami"
  description: "{{ profile.description }}"
  keywords: "{{ profile.name }}, {{ profile.category }}, {{ profile.city }}, fashion Майами, ModelConnect"
  ogTitle: "{{ profile.name }} — {{ profile.category }} | ModelConnect Miami"
  ogDescription: "{{ profile.description }}"
  ogImage: "{{ profile.image_url | default: '/img/og-image-main.webp' }}"
  ogUrl: "https://models-connect.netlify.app/profiles/{{ profile.id | slugify }}/"
  twitterTitle: "{{ profile.name }} — {{ profile.category }} | ModelConnect Miami"
  twitterDescription: "{{ profile.description }}"
  twitterImage: "{{ profile.image_url | default: '/img/og-image-main.webp' }}"
---

seo_canonical: https://models-connect.netlify.app/profiles/{{ profile.id | slugify }}/
seo_json_ld: |
  {
    "@context": "https://schema.org",
    "@type": "Person",
    "name": "{{ profile.name | safe }}",
    "jobTitle": "{{ profile.category | safe }}",
    "address": {
      "@type": "PostalAddress",
      "addressLocality": "{{ profile.city | safe }}"
    },
    "image": "{{ profile.image_url | default: '/img/placeholder.png' | assetUrl }}",
    "url": "https://models-connect.netlify.app/profiles/{{ profile.id | slugify }}/"
  }
---

<nav>
  <ul class="nav-list">
    <li><a href="{{ '/' | assetUrl }}">Главная</a></li>
    <li><a href="{{ '/region/' | assetUrl }}">Регионы</a></li>
    <li><a href="{{ '/category/' | assetUrl }}">Категории</a></li>
    <li><a href="{{ '/add-profile/' | assetUrl }}">Добавить профиль</a></li>
  </ul>
</nav>

<div class="profile-detail">
  <h1>{{ profile.name | safe }} — {{ profile.category | safe }}</h1>
  <div class="profile-detail__images">
    <img
      class="profile-detail__image"
      src="{{ profile.image_url | default: '/img/placeholder.jpg' | assetUrl }}"
      alt="Основное фото профиля {{ profile.name | safe }}"
    />
    <img
      class="profile-detail__image"
      src="{{ profile.image_url2 | default: '/img/placeholder.jpg' | assetUrl }}"
      alt="Работы {{ profile.name | safe }} в fashion-съемках"
    />
    <img
      class="profile-detail__image"
      src="{{ profile.image_url3 | default: '/img/placeholder.jpg' | assetUrl }}"
      alt="Пример фотосессии {{ profile.name | safe }}"
    />
  </div>
  <div class="profile-detail__info">
    <p><strong>Имя:</strong> {{ profile.name | safe }}</p>
    <p><strong>Возраст:</strong> {{ profile.age | default: 'Не указан' }}</p>
    <p><strong>Город:</strong> {{ profile.city | safe }}</p>
    <p><strong>Рубрика:</strong> {{ profile.category | safe }}</p>
    <p class="profile-detail__description"><strong>Описание:</strong> {{ profile.description | safe }}</p>
    <p>{{ profile.date | date: "%d.%m.%Y, %H:%M" }}</p>
    <p class="profile-detail__contact">{{ profile.email | default: 'Не указан' | safe }}</p>
    <a class="button" href="mailto:{{ profile.email | default: '#' }}">Связаться</a>
  </div>
</div>

<footer class="site-footer">
  <p>© 2025 ModelConnect Miami</p>
</footer>