---
pagination:
  data: collections.profiles
  size: 1
  alias: profileItem
permalink: "{{ profileItem.data.profile.url }}"
---
{% assign p = profileItem.data.profile %}
<article class="profile-single">
  <h1>{{ p.name }}</h1>
  <img src="{{ p.image_url | default: '/img/placeholder.png' }}" alt="{{ p.name }}" />
  <p><strong>Город:</strong> {{ p.city }}</p>
  <p><strong>Категория:</strong> {{ p.category }}</p>
  <p><strong>Возраст:</strong> {{ p.age }}</p>
  <p>{{ p.description }}</p>
  <p><strong>Контакты:</strong> {{ p.email }} {% if p.phone %} / {{ p.phone }} {% endif %}</p>
</article>
