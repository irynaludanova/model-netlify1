---
layout: base
pagination:
  data: all-profiles
  size: 1
  alias: profile
permalink: "/profiles/{{ profile.id }}/"
---

<div class="profile-page"p
  <h1>{{ profile.name }}</h1>
  <p><strong>Категория:</strong> {{ profile.category }}</p>
  <p><strong>Город:</strong> {{ profile.city }}</p>
  {% if profile.age %}
    <p><strong>Возраст:</strong> {{ profile.age }}</p>
  {% endif %}
  {% if profile.email %}
    <p><strong>Email:</strong> <a href="mailto:{{ profile.email }}">{{ profile.email }}</a></p>
  {% endif %}
  {% if profile.phone %}
    <p><strong>Телефон:</strong> {{ profile.phone }}</p>
  {% endif %}
  {% if profile.description %}
    <p><strong>Описание:</strong> {{ profile.description }}</p>
  {% endif %}
  <img src="{{ profile.image_url | default: '/img/placeholder.png' }}" alt="{{ profile.name }}" width="400">
</div>
