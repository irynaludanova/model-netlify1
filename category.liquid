---
layout: base
permalink: /category/index.html
eleventyComputed:
  title: "Категории — {{ site.name }}"
  description: "Выберите категорию для просмотра профилей."
  seo_og_title: "Категории — {{ site.name }}"
  seo_og_description: "Каталог специалистов по категориям."
  seo_og_image: "{{ site.url }}/img/og-image.png"
  seo_og_url: "{{ site.url }}/category/"
  seo_twitter_title: "Категории — {{ site.name }}"
  seo_twitter_description: "Каталог специалистов по категориям."
  seo_canonical: "{{ site.url }}/category/"
  seo_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "CollectionPage",
      "name": "Категории — {{ site.name }}",
      "url": "{{ site.url }}/category/",
      "description": "Каталог специалистов по категориям",
      "mainEntity": {
        "@type": "ItemList",
        "itemListElement": [
          {% for category in collections.categories %}
          {
            "@type": "ListItem",
            "position": {{ forloop.index }},
            "item": {
              "@type": "Thing",
              "name": "{{ category.name | escape }}",
              "url": "{{ site.url }}/category/{{ category.name | slugify }}/"
            }
          }{% unless forloop.last %},{% endunless %}
          {% endfor %}
        ]
      }
    }
  breadcrumb_json_ld: |
    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {
          "@type": "ListItem",
          "position": 1,
          "name": "Главная",
          "item": "{{ site.url }}/"
        },
        {
          "@type": "ListItem",
          "position": 2,
          "name": "Категории",
          "item": "{{ site.url }}/category/"
        }
      ]
    }
---

<section class="profiles-section">
  <h1>{{ site.title3 }}</h1>
  <p>Выберите категорию для просмотра профилей:</p>

  <ul class="category-list" role="list" label="Список категорий">
    {% for category in collections.categories %}
      <li class="category-card">
        <a href="/category/{{ category.name | slugify }}/index.html" aria-label="Перейти к категории {{ category.name | escape }}">
          {{ category.name | escape }}
        </a>
        <p>{{ category.profiles | size }} профилей</p>
      </li>
    {% endfor %}
  </ul>

  <div id="profile-list">
    <p>Загрузка профилей...</p>
  </div>
  <div id="pagination-container"></div>
</section>

