  </ul>
</nav>

<div class="categories-section">
  <h1>Профили по категориям</h1>
  {% assign categories = "Модель,Фотограф,Стилист" | split: "," %} {% for
  category in categories %} {% assign profiles_in_category =
  collections.allProfiles | where: "category", category %} {% if
  profiles_in_category.size > 0 %}
  <section id="{{ category | slugify }}">
    <h2>{{ category }}</h2>
    <div class="profile-list">
      {% for profile in profiles_in_category %}
      <div class="profile-card">
        <img
          class="profile-card__image"
          src="{{
            profile.image_url | default : '/img/placeholder.png' | assetUrl
          }}"
          alt="Фото профиля {{ profile.name }}"
        />
        <h3>{{ profile.name }}</h3>
        <p><strong>Город:</strong> {{ profile.city }}</p>
        <p>{{ profile.description | truncate : 100 }}</p>
        <a
          href="{{
            '/profiles/' | append : profile.id | append : '/' | assetUrl
          }}"
          >Подробнее</a
        >
      </div>
      {% endfor %}
    </div>
  </section>
  {% endif %} {% endfor %}
</div>

